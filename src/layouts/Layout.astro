---
import Nav from "../components/Nav.astro";
import Footer from "../components/Footer.astro";
const { pageTitle } = Astro.props;
import "../styles/global.css";
---

<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>Nicolas Klein - Développeur web frontend</title>
    <meta name="generator" content={Astro.generator} />
    <meta name="title" content="Nicolas Klein - Développeur web frontend" />
    <meta
      name="description"
      content="Je suis Klein Nicolas, un étudiant motivé en Bachelier Techniques de Multimédia et de l'Internet (BUT MMI). Je suis passionné par le développement web particulièrement par le frontend"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="bg-lightWith">
    <Nav />
    <div class="mt-[72px]">
      <slot />
      <Footer />
    </div>
  </body>
</html>
